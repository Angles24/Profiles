	<While Condition="HasAtLeast(29890,5) and HasAtLeast(29880,10) and HasAtLeast(29883,10) and HasAtLeast(29884,10)">
		<Lisbeth Json="[{'Group':1,'Item':29836,'Amount':1,'Enabled':true,'Type':'Leatherworker'}]"/>	
	</While>	
	
