		<BuyWhiteScriptItem ItemId="26737" />
	</If>
	<If Condition="(ItemCount(25194) &lt; &craftsmans_competence_7;) and (ItemCount(28063) &gt; 240)">
		<BuyWhiteScriptItem ItemId="25194" />
