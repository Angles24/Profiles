	</If>
	
	<!-- Scrips Full -->
	<If Condition="GetSkybuilderScrips() &gt; 9000">
		<LogMessage Message="SkyBuilders' Scripts Full." />
		<RunCode Name="ScripFull"/>
		<LLStopBot/>
    </If>
	
	<!-- Grade 2 Artisanal Skybuilders' Overcoat -->	
	<If Condition="HasAtLeast(29890,125) and HasAtLeast(29880,250) and HasAtLeast(29883,250) and HasAtLeast(29884,250)">
		<Lisbeth Json="[{'Group':1,'Item':29836,'Amount':25,'Enabled':true,'Type':'Leatherworker'}]"/>	
	</If>
	
	<!-- Turn in-->
	<While Condition="(HasIshgardItem() &gt; 0) or (HasIshgardGatheringMining() &gt; 0) or (HasIshgardGatheringBotanist() &gt; 0)">
